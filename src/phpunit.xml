<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.5/phpunit.xsd" bootstrap="vendor/autoload.php"
         colors="true">
    <testsuites>
        <!-- Admin用 -->
        <testsuite name="AdminUnit">
            <directory suffix="Test.php">tests/Admin/Unit</directory>
            <!-- <directory suffix="Test.php">tests/Admin/Unit/Models</directory> -->
            <!-- <directory suffix="Test.php">tests/Admin/Unit/Notifications</directory> -->
        </testsuite>
        <testsuite name="AdminFeature">
            <directory suffix="Test.php">tests/Admin/Feature</directory>
        </testsuite>
        <!-- ユーザー用 -->
        <testsuite name="UserUnit">
            <directory suffix="Test.php">tests/User/Unit</directory>
            <!-- <directory suffix="Test.php">tests/User/Unit/Models</directory> -->
            <!-- <directory suffix="Test.php">tests/User/Unit/Notifications</directory> -->
            <!-- <directory suffix="Test.php">tests/User/Unit/Services</directory> -->
            <!-- <directory suffix="Test.php">tests/User/Unit/Requests</directory> -->
        </testsuite>
        <testsuite name="UserFeature">
            <directory suffix="Test.php">tests/User/Feature</directory>
        </testsuite>
        <!-- 共通用 -->
        <testsuite name="Common">
            <directory suffix="Test.php">tests/Common/Providers</directory>
        </testsuite>
    </testsuites>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <!-- <env name="DB_CONNECTION" value="sqlite"/> -->
        <!-- <env name="DB_DATABASE" value=":memory:"/> -->
        <env name="MAIL_MAILER" value="array"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
    </php>
    <coverage>
        <report>
            <clover outputFile="coverage.xml"/>
            <html outputDirectory="coverage"/>
        </report>
    </coverage>
    <source>
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </source>
</phpunit>